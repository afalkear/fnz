<table>Transactions:
  <thead>
  <td>Type</td>
  <td>Description</td>
  <td>Amount</td>
  <td>Source</td>
  <td>Date</td>
  <td></td>
  </thead>

  <% context.transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.type %></td>
        <td><%= transaction.description %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.source.name %></td>
        <td><%= transaction.transaction_at %></td>
        <td><%= link_to "Show", transaction_path(transaction) %></td>
      </tr>
  <% end %>
</table>